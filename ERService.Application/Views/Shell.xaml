<Controls:MetroWindow x:Class="ERService.Application.Views.Shell"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:prism="http://prismlibrary.com/"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      prism:ViewModelLocator.AutoWireViewModel="True"
                      WindowStartupLocation="CenterScreen"
                      ShowTitleBar="True"
                      Title="ERService 1.0.0"
                      ShowIconOnTitleBar="True"
                      BorderThickness="0"
                      GlowBrush="Black"
                      ResizeMode="CanResizeWithGrip"
                      WindowTransitionsEnabled="False"
                      Height="780"
                      Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" 
                   Grid.Column="0" 
                   LastChildFill="True"
                   Grid.ColumnSpan="2" Background="LightSteelBlue">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
            </Grid>

            <TextBlock Text="{Binding ApplicationName}"
                       Grid.Column="0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Foreground="Black"
                   FontSize="28"
                   Margin="35"/>

            <ContentControl DockPanel.Dock="Left" Grid.Column="1" 
                            prism:RegionManager.RegionName="HeaderRegion"/>
        </DockPanel>

        <DockPanel Grid.Row="1" 
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   LastChildFill="True">
            <ContentControl DockPanel.Dock="Right" 
                            prism:RegionManager.RegionName="NotificationRegion"/>
        </DockPanel>

        <DockPanel Grid.Row="1" 
                   Grid.Column="0" 
                   LastChildFill="True"
                   Grid.RowSpan="3" Background="WhiteSmoke">
            <ContentControl DockPanel.Dock="Left"
                            prism:RegionManager.RegionName="NavigationRegion"/>
        </DockPanel>

        <DockPanel Grid.Row="3" 
                   Grid.Column="1" 
                   LastChildFill="True">
            <ContentControl DockPanel.Dock="Left" 
                            prism:RegionManager.RegionName="StatusBarRegion"/>
        </DockPanel>

        <DockPanel Grid.Row="2" 
                   Grid.Column="1" 
                   LastChildFill="True">
            <ContentControl DockPanel.Dock="Left" 
                            prism:RegionManager.RegionName="ContentRegion"/>
        </DockPanel>

    </Grid>
</Controls:MetroWindow>
