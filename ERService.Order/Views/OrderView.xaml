<UserControl x:Class="ERService.OrderModule.Views.OrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ERService.OrderModule.Views"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" x:Name="ListBorder" Margin="10 10 10 0"
                BorderBrush="LightGray" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <DockPanel
                    HorizontalAlignment="Right">

                    <Button Content="Drukuj"
                    Command="{Binding PrintCommand}"
                    Margin="10 10 5 10"
                    Foreground="Black"
                    Background="GhostWhite"
                    Height="30"
                    Width="120"/>

                    <Button Content="Anuluj"
                    Command="{Binding CancelCommand}"
                    Margin="10 10 5 10"
                    Foreground="Black"
                    Background="GhostWhite"
                    Height="30"
                    Width="120"/>

                    <Button Content="Zapisz"
                    Command="{Binding SaveCommand}"
                    Margin="10 10 5 10"
                    Foreground="Black"
                    Background="GhostWhite"
                    Height="30"
                    Width="120"/>
                </DockPanel>
                <DockPanel Grid.Column="1" HorizontalAlignment="Right">
                    <Button Content="Wstecz"
                    Command="{Binding GoBackwardCommand}"
                    Margin="10 10 5 10"
                    Foreground="Black"
                    Background="GhostWhite"
                    Height="30"
                    Width="120"/>
                    <Button Content="Dalej"
                    Command="{Binding GoForwardCommand}"
                    Margin="10 10 5 10"
                    Foreground="Black"
                    Background="GhostWhite"
                    Height="30"
                    Width="120"/>
                </DockPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" x:Name="DetailBorder" Margin="10 5 10 10"
                BorderBrush="LightGray" BorderThickness="1">
            <ScrollViewer  
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Dane klienta:" FontSize="18" FontWeight="Bold"/>
                    <Label Grid.Row="1" Content="Imię:" FontSize="14"/>
                    <Label Grid.Row="2" Content="Nazwisko:" FontSize="14"/>

                    <Label Grid.Column="2" Grid.Row="0" Content="Sprzęt:" FontSize="18" FontWeight="Bold"/>
                    <Label Grid.Column="2" Grid.Row="1" Content="Nazwa sprzętu:" FontSize="14"/>
                    <Label Grid.Column="2" Grid.Row="2" Content="Rodzaj urządzenia:" FontSize="14"/>

                    <Label Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" 
                           Content="{Binding Customer.FirstName}"/>

                    <Label Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" 
                           Content="{Binding Customer.LastName}"/>

                    <Label Grid.Column="0" Grid.Row="4" HorizontalAlignment="Left" FontSize="18" FontWeight="Bold"
                           Content="Opis usterki:"/>

                    <TextBox Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" AcceptsReturn="True"
                             TextWrapping="Wrap" MinLines="8" Margin="10 10 10 10"/>

                    <Label Grid.Column="2" Grid.Row="4" HorizontalAlignment="Left" FontSize="18" FontWeight="Bold"
                           Content="Opis naprawy:"/>

                    <TextBox Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="2" AcceptsReturn="True"
                             TextWrapping="Wrap" MinLines="8" Margin="10 10 10 10"/>

                    <Label Grid.Column="0" Grid.Row="7" HorizontalAlignment="Left" FontSize="18" FontWeight="Bold"
                           Content="Załączniki:"/>

                    <ListView Grid.Row="8" Grid.ColumnSpan="2" MinHeight="150" Margin="10 10 10 10"/>

                </Grid>
                
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
