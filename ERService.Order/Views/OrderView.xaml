<UserControl x:Class="ERService.OrderModule.Views.OrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ERService.OrderModule.Views"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="800"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" x:Name="ListBorder" Margin="10 10 10 0"
                BorderBrush="LightGray" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <DockPanel
                    HorizontalAlignment="Right">

                    <Button Content="Drukuj"
                    Command="{Binding PrintCommand}"
                    Margin="10 10 5 10"
                    Foreground="Black"
                    Background="GhostWhite"
                    Height="30"
                    Width="120"/>

                    <Button Content="Anuluj"
                    Command="{Binding CancelCommand}"
                    Margin="10 10 5 10"
                    Foreground="Black"
                    Background="GhostWhite"
                    Height="30"
                    Width="120"/>

                    <Button Content="Zapisz"
                    Command="{Binding SaveCommand}"
                    Margin="10 10 5 10"
                    Foreground="Black"
                    Background="GhostWhite"
                    Height="30"
                    Width="120"/>
                </DockPanel>
                <DockPanel Grid.Column="1" HorizontalAlignment="Right">
                    <Button Content="Wstecz"
                    Command="{Binding GoBackCommand}"
                    Margin="10 10 5 10"
                    Foreground="Black"
                    Background="GhostWhite"
                    Height="30"
                    Width="120"/>
                </DockPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" x:Name="DetailBorder" Margin="10 5 10 10"
                BorderBrush="LightGray" BorderThickness="1">
            <ScrollViewer  
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Dane klienta:" FontSize="18" FontWeight="Bold"/>
                    <Label Grid.Row="1" Content="Imię:" FontSize="14"/>
                    <Label Grid.Row="2" Content="Nazwisko:" FontSize="14"/>

                    <Label Grid.Column="2" Grid.Row="0" Content="Numer naprawy:" FontSize="18" FontWeight="Bold"/>
                    <Label Grid.Column="2" Grid.Row="2" Content="Postęp naprawy:" FontSize="14"/>
                    <Slider Grid.Row="2" Grid.Column="3" Minimum="0" Maximum="100"
                            Width="200"
                            HorizontalAlignment="Left"
                            Margin="5 5 10 5"
                            Style="{DynamicResource FlatSlider}"
                            x:Name="slider"
                            ToolTipService.ToolTip="{Binding Path=Value, ElementName=slider}"
                            AutoToolTipPrecision="0"
                            AutoToolTipPlacement="BottomRight"
                            Value="{Binding Order.Progress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    </Slider>

                    <Label Grid.Column="3" Grid.Row="0" HorizontalAlignment="Left"
                           FontWeight="Bold"
                           VerticalContentAlignment="Center"
                           FontSize="18"
                           Content="{Binding Order.Number, Mode=OneWay}"/>
                    <Label Grid.Column="2" Grid.Row="1" Content="Nazwa urządzenia:" FontSize="14"/>
                    <Label Grid.Column="3" Grid.Row="1" HorizontalAlignment="Left" FontSize="14"
                           VerticalAlignment="Center"
                           Content="{Binding Hardware.Name}"/>
                    
                    <Label Grid.Column="2" Grid.Row="3" Content="Numer zewnętrzny:" 
                           FontSize="14" VerticalContentAlignment="Center"/>
                    <TextBox Text="{Binding Order.ExternalNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Column="3" Grid.Row="3"
                             HorizontalAlignment="Left"
                             Width="150"
                             Margin="5"/>

                    <Label Grid.Column="2" Grid.Row="4" Content="Koszt naprawy:" 
                           FontSize="14"
                           VerticalContentAlignment="Center"/>
                    <TextBox Text="{Binding Order.Cost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Column="3" Grid.Row="4"
                             Margin="5"
                             Width="150"
                             HorizontalAlignment="Left"/>

                    <Label Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" 
                           Content="{Binding Customer.FirstName}"/>

                    <Label Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" 
                           Content="{Binding Customer.LastName}"/>

                    <Label Grid.Column="0" Grid.Row="3" 
                           Content="Status naprawy:" 
                           FontSize="14"
                           Margin="0 5 0 5"/>
                    <ComboBox Grid.Column="1" Grid.Row="3" Margin="5"
                              ItemsSource="{Binding OrderStatuses}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Name"
                              SelectedValue="{Binding SelectedOrderStatus.Name}"
                              SelectedItem="{Binding SelectedOrderStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              IsSynchronizedWithCurrentItem="True"
                              Width="180"
                              HorizontalAlignment="Left"/>

                    <Label Grid.Column="0" Grid.Row="4" 
                           Content="Typ naprawy:" 
                           FontSize="14"
                           Margin="0 5 0 5"/>
                    <ComboBox Grid.Column="1" Grid.Row="4" Margin="5"
                              ItemsSource="{Binding OrderTypes}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Name"
                              SelectedValue="{Binding SelectedOrderType.Name}"
                              SelectedItem="{Binding SelectedOrderType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              IsSynchronizedWithCurrentItem="True"
                              Width="180"
                              HorizontalAlignment="Left"/>

                    <Label Grid.Column="0" Grid.Row="6" HorizontalAlignment="Left" FontSize="18" FontWeight="Bold"
                           Content="Opis usterki:"/>

                    <TextBox Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="2" AcceptsReturn="True"
                             TextWrapping="Wrap" MinLines="8" Margin="10 10 10 10"
                             Text="{Binding Order.Fault, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <Label Grid.Column="2" Grid.Row="6" HorizontalAlignment="Left" FontSize="18" FontWeight="Bold"
                           Content="Opis naprawy:"/>

                    <TextBox Grid.Column="2" Grid.Row="7" Grid.ColumnSpan="2" AcceptsReturn="True"
                             TextWrapping="Wrap" MinLines="8" Margin="10 10 10 10"
                             Text="{Binding Order.Solution, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <Label Grid.Column="0" Grid.Row="8" HorizontalAlignment="Left" FontSize="18" FontWeight="Bold"
                           Content="Załączniki:"/>

                    <StackPanel Grid.Row="9" Grid.Column="2" Grid.ColumnSpan="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Grid.Row="0" FontSize="14"
                                   Content="Data dodania:"
                                   Margin="5"/>

                            <DatePicker Grid.Column="1" Grid.Row="0" Margin="5"
                                        Width="150" HorizontalAlignment="Left"
                                        IsTodayHighlighted="False"
                                        SelectedDate="{Binding Order.DateAdded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            
                            <Label Grid.Column="0" Grid.Row="1" FontSize="14"
                                   Content="Data zamknięcia:"
                                   Margin="5"/>

                            <DatePicker Grid.Column="1" Grid.Row="1" Margin="5"
                                        Width="150" HorizontalAlignment="Left"
                                        IsTodayHighlighted="False"
                                        SelectedDate="{Binding Order.DateEnded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        </Grid>
                    </StackPanel>

                    <ListView Grid.Row="9" Grid.ColumnSpan="2" 
                              MinHeight="120" Margin="10 10 10 10"
                              SelectedItem="{Binding SelectedAttachment}"
                              ItemsSource="{Binding Attachments}"
                              DisplayMemberPath="FileName"/>

                    <Label Grid.Column="2" Grid.Row="10" HorizontalAlignment="Left" FontSize="18" FontWeight="Bold"
                           Content="Komentarz:"/>

                    <TextBox Grid.Column="2" Grid.Row="11" 
                             Grid.ColumnSpan="2" AcceptsReturn="True"
                             TextWrapping="Wrap" MinLines="3" Margin="10 10 10 10"
                             Text="{Binding Order.Comment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <DockPanel Grid.Row="10" Grid.ColumnSpan="2" FlowDirection="LeftToRight"
                               HorizontalAlignment="Left">
                        <Button Content="Dodaj +" Width="80"
                                Command="{Binding AddAttachmentCommand}"
                                Margin="10 0 10 0"/>
                        <Button Content="Usuń -" Width="60"
                                Command="{Binding RemoveAttachmentCommand}"
                                Margin="5 0 5 0"/>
                    </DockPanel>
                    
                </Grid>
                
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
