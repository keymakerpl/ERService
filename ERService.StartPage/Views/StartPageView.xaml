<UserControl x:Class="ERService.StartPage.Views.StartPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ERService.StartPage.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             prism:ViewModelLocator.AutoWireViewModel="True" >

    <UserControl.Resources>
        <Style x:Key="LargeTileStyle" TargetType="controls:Tile">
            <Setter Property="Width" Value="300" />
            <Setter Property="Height" Value="200" />
            <Setter Property="TitleFontSize" Value="15" />
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="SmallTileStyle" TargetType="controls:Tile">
            <Setter Property="Width" Value="125" />
            <Setter Property="Height" Value="125" />
            <Setter Property="TitleFontSize" Value="15" />
            <Setter Property="Margin" Value="5"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">


            <controls:Tile Title="Dodaj nową naprawę"
                           Style="{StaticResource SmallTileStyle}"
                           Background="CadetBlue"
                           Command="{Binding AddOrderCommand}"/>

            <controls:Tile Title="Naprawy" 
                           Style="{StaticResource SmallTileStyle}"
                           Background="Green"
                           Command="{Binding OrdersCommand}"/>

            <controls:Tile Title="Klienci"
                           Style="{StaticResource SmallTileStyle}"
                           Command="{Binding CustomersCommand}"/>

            <controls:Tile Title="Ustawienia"
                           Style="{StaticResource SmallTileStyle}"
                           Background="OrangeRed"
                           Command="{Binding SettingsCommand}"/>

            
        </StackPanel>

    </Grid>
</UserControl>
