<UserControl x:Class="ERService.CustomerModule.Views.CustomerListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ERService.CustomerModule.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:ERService.Infrastructure.Helpers;assembly=ERService.Infrastructure"
             mc:Ignorable="d" 
             d:DesignHeight="590" d:DesignWidth="1410"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True" 
             xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             Dialog:DialogParticipation.Register="{Binding}">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" x:Name="ToolbarBorder" Margin="10 10 10 0"
                BorderBrush="LightGray" BorderThickness="1">
            <DockPanel 
                   FlowDirection="RightToLeft"
                   HorizontalAlignment="Right">
                <Button Content="Usuń"
                    Command="{Binding DeleteCommand}"
                    Margin="10 5 0 5"
                    Foreground="Black"
                    Background="GhostWhite"
                    Height="30"
                    Width="120"/>
                <Button Content="Szukaj"
                    Command="{Binding SearchCommand}"
                    Margin="10 5 0 5"
                    Foreground="Black"
                    Background="GhostWhite"
                    Height="30"
                    Width="120"/>
                <Button Content="Dodaj"
                    Command="{Binding AddCommand}"
                    Margin="10 5 0 5"
                    Foreground="Black"
                    Background="GhostWhite"
                    Height="30"
                    Width="120"/>
            </DockPanel>
        </Border>

        <Border Grid.Row="1" x:Name="ListBorder" Margin="10 5 10 10"
                BorderBrush="LightGray" BorderThickness="1">
            <ScrollViewer Grid.Row="1">
                <Grid Margin="1 1 1 1">
                    <DataGrid
                  ItemsSource="{Binding Models, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  SelectionMode="Single"  
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  helpers:RowDoubleClickHandler.MethodName="OnMouseDoubleClickExecute">

                        <DataGrid.Resources>
                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}"
                               TargetType="{x:Type DataGridColumnHeader}">                            
                            <Setter Property="Foreground" Value="Black"/>
                        </Style>
                    </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Imię" Width="*"
                                    ElementStyle="{StaticResource DataGridColumnStyle}"
                                    EditingElementStyle="{StaticResource DataGridEditingColumnStyle}"
                                    Binding="{Binding FirstName}"/>
                            <DataGridTextColumn Header="Nazwisko" Width="*"
                                    ElementStyle="{StaticResource DataGridColumnStyle}"
                                    EditingElementStyle="{StaticResource DataGridEditingColumnStyle}"
                                    Binding="{Binding LastName}"/>
                            <DataGridTextColumn Header="Firma" Width="*"
                                    ElementStyle="{StaticResource DataGridColumnStyle}"
                                    EditingElementStyle="{StaticResource DataGridEditingColumnStyle}"
                                    Binding="{Binding CompanyName}"/>
                            <DataGridTextColumn Header="NIP" Width="*"
                                    ElementStyle="{StaticResource DataGridColumnStyle}"
                                    EditingElementStyle="{StaticResource DataGridEditingColumnStyle}"
                                    Binding="{Binding NIP}"/>
                            <DataGridTextColumn Header="Telefon" Width="*"
                                    ElementStyle="{StaticResource DataGridColumnStyle}"
                                    EditingElementStyle="{StaticResource DataGridEditingColumnStyle}"
                                    Binding="{Binding PhoneNumber}"/>
                            <DataGridTextColumn Header="Telefon 2" Width="*"
                                    ElementStyle="{StaticResource DataGridColumnStyle}"
                                    EditingElementStyle="{StaticResource DataGridEditingColumnStyle}"
                                    Binding="{Binding PhoneNumber2}"/>
                            <DataGridTextColumn Header="E-mail" Width="*"
                                    ElementStyle="{StaticResource DataGridColumnStyle}"
                                    EditingElementStyle="{StaticResource DataGridEditingColumnStyle}"
                                    Binding="{Binding Email}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </ScrollViewer>
        </Border>

    </Grid>
    
</UserControl>
