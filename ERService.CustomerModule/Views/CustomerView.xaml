<UserControl x:Class="ERService.CustomerModule.Views.CustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ERService.CustomerModule.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="800"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True" >
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" x:Name="ToolbarBorder" Margin="10 10 10 0"
                BorderBrush="LightGray" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <DockPanel
                    HorizontalAlignment="Left">

                    <Button Content="Zapisz"
                    Command="{Binding SaveCommand}"
                    Margin="10 10 5 10"
                    Foreground="Black"
                    Background="GhostWhite"
                    Height="30"
                    Width="120"
                            Visibility="{Binding WizardMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                    <Button Content="Naprawy"
                    Command="{Binding CustomerOrdersCommand}"
                    Margin="5 10 10 10"
                    Foreground="Black"
                    Background="GhostWhite"
                    Height="30"
                    Width="120"
                            Visibility="{Binding WizardMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                    <Button Content="Anuluj"
                    Command="{Binding CancelCommand}"
                    Margin="5 10 10 10"
                    Foreground="Black"
                    Background="GhostWhite"
                    Height="30"
                    Width="120"/>
                </DockPanel>

                <DockPanel Grid.Column="1" FlowDirection="RightToLeft"
                           HorizontalAlignment="Right">
                    <Button Content="Dalej"
                            Command="{Binding GoForwardCommand}"
                            Margin="5 10 10 10"
                            Foreground="Black"
                            Background="GhostWhite"
                            Height="30"
                            Width="120"
                            Visibility="{Binding WizardMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </DockPanel>

            </Grid>
        </Border>

        <Border Grid.Row="1" x:Name="DetailBorder" Margin="10 5 10 10"
                BorderBrush="LightGray" BorderThickness="1">
            <ScrollViewer  
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="35"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Content="Imię" Margin="10 10 0 0"/>
                    <TextBox Grid.Row="1" Margin="10 0 10 10"
                 Text="{Binding Customer.FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>

                    <Label Grid.Row="2" Content="Nazwisko" Margin="10 10 0 0"/>
                    <TextBox Grid.Row="3" Margin="10 0 10 10"
                 Text="{Binding Customer.LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>

                    <Label Grid.Row="4" Content="Firma" Margin="10 10 0 0"/>
                    <TextBox Grid.Row="5" Margin="10 0 10 10"
                 Text="{Binding Customer.CompanyName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>

                    <Label Grid.Row="6" Content="NIP" Margin="10 10 0 0"/>
                    <TextBox Grid.Row="7" Margin="10 0 10 10"
                 Text="{Binding Customer.NIP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>

                    <Label Grid.Row="0" Grid.Column="2" Content="Email" Margin="10 10 0 0"/>
                    <TextBox Grid.Row="1" Grid.Column="2" Margin="10 0 10 10"
                 Text="{Binding Customer.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>

                    <Label Grid.Row="2" Grid.Column="2" Content="Email 2" Margin="10 10 0 0"/>
                    <TextBox Grid.Row="3" Grid.Column="2" Margin="10 0 10 10"
                 Text="{Binding Customer.Email2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>

                    <Label Grid.Row="4" Grid.Column="2" Content="Numer telefonu" Margin="10 10 0 0"/>
                    <TextBox Grid.Row="5" Grid.Column="2" Margin="10 0 10 10"
                 Text="{Binding Customer.PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>

                    <Label Grid.Row="6" Grid.Column="2" Content="Numer telefonu 2" Margin="10 10 0 0"/>
                    <TextBox Grid.Row="7" Grid.Column="2" Margin="10 0 10 10"
                 Text="{Binding Customer.PhoneNumber2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>

                    <Label Grid.Row="8" Grid.Column="2" Content="Opis" Margin="10 10 0 0"/>
                    <TextBox Grid.Row="9" Grid.Column="2" Margin="10 0 10 10" AcceptsReturn="True"
                             MinLines="8" Grid.ColumnSpan="2"
                 Text="{Binding Customer.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>

                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
