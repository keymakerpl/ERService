<UserControl x:Class="ERService.TemplateEditor.Views.PrintTemplateEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ERService.TemplateEditor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             Dialog:DialogParticipation.Register="{Binding}"             
             xmlns:helpers="clr-namespace:ERService.Infrastructure.Helpers;assembly=ERService.Infrastructure"
             xmlns:editor="clr-namespace:Smith.WPF.HtmlEditor;assembly=Smith.WPF.HtmlEditor"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:metroControls="http://metro.mahapps.com/winfx/xaml/controls">

    <UserControl.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="Padding"
                    Value="0" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
        </Style>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding"
                    Value="4,2" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="75*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Column="1" HorizontalAlignment="Stretch"
                       Margin="5 0 5 0" Visibility="{Binding IsNavigationBarVisible, Converter={StaticResource BooleanToVisibilityConverter}}">

                <metroControls:DropDownButton
                        Margin="5"
                        VerticalContentAlignment="Center"
                        Width="100"
                        Height="30"
                    DockPanel.Dock="Right"
                        Content="Szablony"
                        DisplayMemberPath="Name"
                        ItemsSource="{Binding PrintTemplates}">
                    <metroControls:DropDownButton.ItemContainerStyle>
                        <Style TargetType="MenuItem" BasedOn="{StaticResource {x:Type MenuItem}}">
                            <Setter Property="Command" Value="{Binding DataContext.SelectTemplateCommand, RelativeSource={RelativeSource AncestorType=local:PrintTemplateEditorView}}"/>
                            <Setter Property="CommandParameter" Value="{Binding}"/>
                        </Style>
                    </metroControls:DropDownButton.ItemContainerStyle>
                </metroControls:DropDownButton>

                <Button 
                    Command="{Binding GoBackCommand}"
                    Foreground="Black"
                    Background="GhostWhite"
                    Height="25"
                    Width="25" Margin="5 0 5 0" HorizontalAlignment="Left"
                        Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}" BorderThickness="0">
                    <iconPacks:PackIconMaterial Kind="ArrowLeft" />
                </Button>

                <Button 
                    Command="{Binding PrintCommand}"
                    Foreground="Black"
                    Background="GhostWhite"
                    Height="25"
                    Width="25" Margin="5 0 5 0" HorizontalAlignment="Left"
                        Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}" BorderThickness="0">
                    <iconPacks:PackIconMaterial Kind="Printer" />
                </Button>

            </DockPanel>

            <GroupBox Header="Znaczniki" Margin="5" Grid.Row="1"
                      Visibility="{Binding IsReadOnly, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                
                    <ListView
                        ItemsSource="{Binding Indexes}"
                        SelectedItem="{Binding SelectedIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    
                        <ListView.ItemTemplate >
                            <DataTemplate>
                                <Border BorderThickness="1" BorderBrush="LightGray" Margin="2" CornerRadius="2">
                                    <Grid Margin="5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <WrapPanel>
                                                <TextBlock Text="{Binding DisplayableName}"/>
                                            </WrapPanel>
                                            <WrapPanel Grid.Row="1">
                                                <TextBlock Text="{Binding IndexPattern}" FontStyle="Italic"
                                                           Foreground="DimGray" Margin="5 1 5 0 "/>
                                            </WrapPanel>
                                            <Button Grid.Column="1" Grid.RowSpan="2" Foreground="DimGray"                                                      
                                                    VerticalAlignment="Center" HorizontalAlignment="Center"
                                                    Command="{Binding RelativeSource={RelativeSource AncestorType=local:PrintTemplateEditorView, Mode=FindAncestor}, 
                                                    Path=DataContext.AddIndexToEditorCommand}"
                                                    CommandParameter="{Binding IndexPattern}"
                                                    Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}" BorderThickness="0">
                                                <iconPacks:PackIconMaterialLight Kind="ArrowRightCircle" /> 
                                            </Button>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                
            </GroupBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Stretch"  
                        Visibility="{Binding IsReadOnly, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <Label Content="Nazwa szblonu:" Margin="5"/>
                <TextBox Margin="5" Width="150" 
                         Text="{Binding PrintTemplate.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <Border Grid.Column="1" Grid.Row="1" BorderBrush="SlateGray" 
                    BorderThickness="1"  Margin="5"
                    FocusManager.FocusedElement="{Binding ElementName=Editor}">
                <editor:HtmlEditor x:Name="Editor"
                                   ReadOnly="{Binding IsReadOnly, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                   IsToolbarVisible="{Binding IsToolbarVisible, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                   BindingContent="{Binding PrintTemplate.Template, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   helpers:IndexToInsert.InsertPattern="{Binding PatternToInsert, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </Border>

            <StackPanel Grid.Row="2" HorizontalAlignment="Stretch" Orientation="Horizontal"
                        Grid.Column="1" FlowDirection="RightToLeft" Margin="5 0 5 0"
                        Visibility="{Binding IsReadOnly, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                        helpers:ReadOnlyContainer.IsReadOnly="{Binding IsReadOnly}">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <LinearGradientBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                <RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="White" Offset="0.25"/>
                        <GradientStop Color="Gainsboro" Offset="1"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
                <Button Content="Zapisz" Command="{Binding SaveCommand}" Margin="5" MaxHeight="30"/>
                <Button Content="Anuluj" Command="{Binding CancelCommand}" Margin="5" MaxHeight="30"/>
            </StackPanel>
            
        </Grid>
    </Grid>

</UserControl>
