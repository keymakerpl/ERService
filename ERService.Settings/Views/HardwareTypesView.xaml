<UserControl x:Class="ERService.Settings.Views.HardwareTypesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ERService.Settings.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">

    <Grid Margin="10 10 10 10" Background="White">

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0"
                      ItemsSource="{Binding HardwareTypes}"
                      SelectedItem="{Binding SelectedHardwareType, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      RowHeaderWidth="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Typy urządzeń"
                                        Width="*"
                                        ElementStyle="{StaticResource DataGridColumnStyle}"
                                        EditingElementStyle="{StaticResource DataGridEditingColumnStyle}"
                                        Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="1" Margin="0 5 5 5">
            <Button Content="Dodaj" Command="{Binding AddCommand}" Margin="5" Width="125"/>
            <Button Content="Usuń" Command="{Binding RemoveCommand}" Margin="5" Width="125"/>
        </StackPanel>

        <DataGrid Grid.Row="0" Grid.Column="2"
                      ItemsSource="{Binding CustomItems}"
                      SelectedItem="{Binding SelectedCustomItem, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      RowHeaderWidth="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Pola definiowane"
                                        Width="*"
                                        ElementStyle="{StaticResource DataGridColumnStyle}"
                                        EditingElementStyle="{StaticResource DataGridEditingColumnStyle}"
                                        Binding="{Binding Key, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="3" Margin="0 5 5 5">
            <Button Content="Dodaj" Command="{Binding AddCustomItemCommand}" Margin="5" Width="125"/>
            <Button Content="Usuń" Command="{Binding RemoveCustomItemCommand}" Margin="5" Width="125"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right"
                    Grid.ColumnSpan="4">
            <Button Content="Zapisz" Command="{Binding SaveCommand}" Width="125"/>
        </StackPanel>

    </Grid>
</UserControl>
