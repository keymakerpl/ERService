<UserControl x:Class="ERService.Settings.Views.NumerationSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ERService.Settings.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid >
        <GroupBox Header="Numeracja" Margin="0 5 0 0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label Content="Schemat numeracji:" FontSize="14"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Width="180"
                         Margin="5 0 5 0"
                         Text="{Binding Numeration.Pattern, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right"
                    Grid.ColumnSpan="4">
                        <Button Content="Zapisz" Command="{Binding SaveCommand}" Width="125"
                            Margin="10"/>
                    </StackPanel>

                    <Label Grid.Row="1" Content="[MM][RRRR]" VerticalAlignment="Center"/>

                </Grid>
            </StackPanel>
        </GroupBox>
        
    </Grid>
</UserControl>
