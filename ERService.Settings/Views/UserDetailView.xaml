<UserControl x:Class="ERService.Settings.Views.UserDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ERService.Settings.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid Background="White" Margin="10">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <GroupBox Header="Dane użytkownika" Margin="5" Width="Auto">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="Login: " Grid.Row="0"/>
                <TextBox Text="{Binding Login, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                         Grid.Column="1" Grid.Row="0" MinWidth="150"
                         Margin="0 5 0 5"/>
                <Label Content="Hasło: " Grid.Column="2" Grid.Row="0"/>
                <TextBox Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Column="3" Grid.Row="0" MinWidth="150"
                         Margin="0 5 0 5"/>
                <Label Content="Imię: " Grid.Row="1"/>
                <TextBox Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Column="1" Grid.Row="1"
                         Margin="0 5 0 5"/>
                <Label Content="Nazwisko: " Grid.Row="2"/>
                <TextBox Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Column="1" Grid.Row="2"
                         Margin="0 5 0 5"/>
                <Label Content="Numer tel.: " Grid.Row="32"/>
                <TextBox Text="{Binding PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Column="1" Grid.Row="3"
                         Margin="0 5 0 5"/>
                <CheckBox Content="Administrator" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1"
                          Margin="5 0 5 0"/>
                <CheckBox Content="Aktywny" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="2"
                          Margin="5 0 5 0"/>
            </Grid>
        </GroupBox>
        
    </Grid>
</UserControl>
