<UserControl x:Class="ERService.Settings.Views.UsersSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ERService.Settings.Views"
             xmlns:helpers="clr-namespace:ERService.Infrastructure.Helpers;assembly=ERService.Infrastructure"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             Dialog:DialogParticipation.Register="{Binding}"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks">

    <Grid x:Name="MainGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Grid.RowSpan="3" Header="Użytkownicy" Margin="0 5 5 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel>
                    <ListView
                        ItemsSource="{Binding Users}"
                        SelectedItem="{Binding SelectedUser, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="1" BorderBrush="LightGray" Margin="2" CornerRadius="2">
                                    <Grid Margin="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <WrapPanel>
                                            <TextBlock Grid.Column="0" Grid.RowSpan="2"
                                                       FontSize="18"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontFamily="Segoe MDL2 Assets"
                                                       Foreground="Black"
                                                       Text="" />
                                            <TextBlock Text="Login:" Foreground="DarkSlateGray" FontStyle="Italic" VerticalAlignment="Bottom"
                                                       Margin="5" />
                                            <TextBlock Text="{Binding Login}" FontWeight="Bold" Margin="5" FontSize="12"
                                                       MinWidth="100" />
                                        </WrapPanel>
                                        <WrapPanel Grid.Row="1" Grid.Column="0" Margin="0 0 5 0">
                                            <TextBlock Text="Imię:" Foreground="DarkSlateGray" FontStyle="Italic" VerticalAlignment="Bottom"
                                                       Margin="5" />
                                            <TextBlock Text="{Binding FirstName}" FontWeight="Bold" Margin="5" FontSize="12"
                                                       MinWidth="100" />
                                            <TextBlock Text="Nazwisko:" Foreground="DarkSlateGray" FontStyle="Italic" VerticalAlignment="Bottom"
                                                       Margin="5" />
                                            <TextBlock Text="{Binding LastName}" FontWeight="Bold" Margin="5" FontSize="12" MinWidth="80"/>
                                            <TextBlock Text="Rola:" Foreground="DarkSlateGray" FontStyle="Italic" VerticalAlignment="Bottom"
                                                       Margin="5" />
                                            <TextBlock Text="{Binding Role.Name}" FontWeight="Bold" Margin="5" FontSize="12" />
                                        </WrapPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Horizontal"
                            FlowDirection="RightToLeft">
                    <StackPanel.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White" Offset="0.25"/>
                            <GradientStop Color="Gainsboro" Offset="1"/>
                        </LinearGradientBrush>
                    </StackPanel.Background>
                    <Button Margin="5"
                            Foreground="SlateGray"
                            Width="20" Height="20"
                            Command="{Binding RemoveUserCommand}" 
                            Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}" BorderThickness="0">
                        <iconPacks:PackIconFontAwesome Kind="TrashAltRegular" />
                    </Button>
                    <Button Margin="5"
                            Command="{Binding EditUserCommand}"
                            Foreground="SlateGray" 
                            Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}" BorderThickness="0">
                        <iconPacks:PackIconMaterial Kind="AccountEdit" />
                    </Button>
                    <Button Margin="5" Width="20" Height="20"
                            Command="{Binding AddUserCommand}"
                            Foreground="SlateGray" 
                            Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}" BorderThickness="0">
                        <iconPacks:PackIconOcticons Kind="PlusSmall" />
                    </Button>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Column="1" Header="Role" Margin="0 5 0 5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel>
                    <ListView
                        ItemsSource="{Binding Roles}"
                        SelectedItem="{Binding SelectedRole, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <WrapPanel>
                                    <TextBlock Text="Nazwa roli: " Foreground="DarkSlateGray" FontStyle="Italic" VerticalAlignment="Bottom"
                                               Margin="10 0 0 0" />
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="5 0 5 0" FontSize="12"
                                               MinWidth="100" />
                                </WrapPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Horizontal"
                            FlowDirection="RightToLeft">
                    <StackPanel.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White" Offset="0.25"/>
                            <GradientStop Color="Gainsboro" Offset="1"/>
                        </LinearGradientBrush>
                    </StackPanel.Background>
                    <Button Margin="5" Command="{Binding RemoveRoleCommand}" Width="20" Height="20"
                            Foreground="SlateGray"
                            Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}" BorderThickness="0">
                        <iconPacks:PackIconFontAwesome Kind="TrashAltRegular" />
                    </Button>
                    <Button Margin="5" Command="{Binding AddRoleCommand}" Width="20" Height="20"
                            Foreground="SlateGray" 
                            Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}" BorderThickness="0">
                        <iconPacks:PackIconOcticons Kind="PlusSmall" />
                    </Button>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Column="1" Grid.Row="1" Header="Uprawnienia dla wybranej roli" Margin="0 5 0 5">
            <Grid helpers:ReadOnlyContainer.IsReadOnly="{Binding IsReadOnly}">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel>
                    <ListView
                        ItemsSource="{Binding RoleACLs}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <WrapPanel>
                                        <TextBlock Text="{Binding AclVerb.Name}" />
                                    </WrapPanel>
                                    <WrapPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <CheckBox IsChecked="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    </WrapPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="2" HorizontalAlignment="Stretch" Orientation="Horizontal"
                    Grid.Column="1" FlowDirection="RightToLeft"
                    helpers:ReadOnlyContainer.IsReadOnly="{Binding IsReadOnly}">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterY="0.5" CenterX="0.5"/>
                            <RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="White" Offset="0.25"/>
                    <GradientStop Color="Gainsboro" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <Button Content="Zapisz" Command="{Binding SaveCommand}" Margin="5" />
            <Button Content="Anuluj" Command="{Binding CancelCommand}" Margin="5" />
        </StackPanel>
    </Grid>
</UserControl>